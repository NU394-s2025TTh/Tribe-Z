{
  "hosting": {
    "public": "pizza/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "predeploy": ["npx nx build pizza"]
  },
  "functions": [
    {
      "source": "./functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": ["npx nx build functions"]
    }
  ]
}
