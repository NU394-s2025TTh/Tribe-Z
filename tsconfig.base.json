{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    // "emitDeclarationOnly": true,
    "baseUrl": ".",
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@cs394-vite-nx-template/shared": ["libs/shared/src/index.ts"],
      "@pizza/lib": ["shared/src/index.ts"]
    }
  }
}
